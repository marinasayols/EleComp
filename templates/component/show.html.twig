{% extends 'base.html.twig' %}

{% block title %}{{ component.name }}{% endblock %}

{% block body %}
    <h1>
        <div class="row">
            <div class="col">
                {{ component.name }}
                <a href="{{ path('app_component_edit', {'id': component.id}) }}"
                   class="text-black">
                    <span class="bi bi-pencil-square"></span>
                </a>
            </div>
            <div class="col">
                {{ include('component/_delete_form.html.twig') }}
            </div>
        </div>
    </h1>

    <div class="btn-group">

    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Value</th>
            <td>{{ component.value }}</td>
            <td>{{ unit }}</td>
        </tr>
        <tr>
            <th>Tolerance</th>
            <td>{{ component.tolerance }}</td>
            <td>%</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ component.price }}</td>
            <td>â‚¬</td>
        </tr>
        {% for field in fields %}
            <tr>
                <th>{{ field.name|capitalize }}</th>
                <td>{{ attribute(component, field.name) }}</td>
                <td>{{ field.unit }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col">
            <h4>Manufacturers</h4>
            <ul class="manufacturers">
                {% for manufacturer in component.manufacturers %}
                    <li>{{ manufacturer.name }}</li>
                {% else %}
                    <p>No manufacturers</p>
                {% endfor %}
            </ul>
        </div>
        <div class="col">
            <h4>Providers</h4>
            <ul class="providers">
                {% for provider in component.providers %}
                    <li>{{ provider.name }}</li>
                {% else %}
                    <p>No providers</p>
                {% endfor %}
            </ul>
        </div>
    </div>

    <h4>Projects</h4>
    <table class="table w-auto">
        <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        {% for projectItem in component.projectItems %}
            <tr>
                <td>{{ projectItem.project.name }}</td>
                <td>{{ projectItem.qty }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="100%">No projects</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <a href="{{ path('app_component_base') }}">back to list</a>
{% endblock %}
